<div class="container">
    <%= flash[:notice] %>
    <% if @book.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="row">
        <div class="main">
            <div class="col-xs-3">
                <%= render 'layouts/sidebar', user: current_user, book: @book%>
            </div>
            <div class="col-xs-9">
                <h1>Users</h1>
                <table  class="table table-striped">
                    <thead>
                        <tr>
                            <th>image</th>
                            <th>name</th>
                        </tr>
                    </thead>
                    <% @users.each do |user| %>
                        <tbody>
                            <tr>
                                <td>
                                    <%= attachment_image_tag user, :profile_image, :fill, 20, 20, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
                                </td>
                                <td><%= user.name %></td>
                                <td><%= link_to "Show", user_path(user) %></td>
                            </tr>
                        </tbody>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</div>
