<div class="container">
  <%= flash[:notice] %>
  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert  alert-danger">
      <ul>

        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="main">
      <%= render 'layouts/sidebar', user: current_user, book: @book%>
        <div class="col-xs-9">
          <h1>Books detail</h1>
            <table  class="table table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Body</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
                  </td>
                  <td><%= @abook.title  %></td>
                  <td><%= @abook.body %></td>
                  <td><%= link_to "Edit", edit_book_path(@abook.id) %></td>
                  <td><%= link_to "Destroy", book_path(@abook.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
                </tr>
             <% end %>
          </tbody>
  </table>
  </div>
 </div>

</div>