<div class="container">
      <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

  <% if @book.errors.any? %>
	<div id="error_explanation" class="alert alert-danger">
    	<ul>
    		<% @book.errors.full_messages.each do |message| %>
        		<li><%= message %></li>
        <% end %>
      </ul>
	</div>
	<% end %>
  <div class="row">
  <div class="main">
    <div class="col-xs-3">
      <%= flash[:notice] %>
      <h2>User info</h2>
        <div class="profile-container row">
          <%= attachment_image_tag @books.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @books.user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @books.user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <% if @books.user == current_user %>
          <div class="row">
            <%= link_to "", edit_user_path(current_user), class: "glyphicon glyphicon-wrench col-xs-12 btn btn-default" %>
          </div>
          <% else %>
          <%= link_to "", user_path(current_user), class: "glyphicon glyphicon-wrench col-xs-12 btn btn-default" %>
          <% end %>
        </div>
        <h2>New book</h2>
        <%= form_for(@book) do |f| %>
          <div class="field row">
            <label for="book_title">Title</label>
            <%= f.text_field :title, class: "col-xs-12" %>
          </div>
            <div class="field row">
              <label>Opinion</label>
              <%= f.text_area :body, class: "col-xs-12" %>
            </div>
              <div class="action row">
                <%=f.submit class: "btn btn-primary col-xs-12"%>
              </div>
        <% end %>
    </div>
    <div class="col-xs-9">
      <div class="row">
			<h1>Book detail</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
              <a href="<%= user_path(@books.user) %>">
							 <%= attachment_image_tag @books.user, :profile_image, :fill, 20, 20, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
							 <br><%= @books.user.name %></a>
						</td>
						<td><%= @books.title %></td>
						<td><%= @books.body %></td>
						<% if @books.user == current_user %>
						<td><button class="btn-sm btn-success"><%= link_to "Edit", edit_book_path(@books) %></td></button>
						<td>
							<button class="btn-sm btn-danger"><%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></button>
						</td>
						<% end %>
					</tr>
				</tbody>
			</table>
     </div>
		</div>
  </div>
	</div>
</div>








