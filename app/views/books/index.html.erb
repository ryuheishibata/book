<div class="container">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  <div class="row">
  <div class="main">
    
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>

      <% @book.errors.full_messages.each do |message| %>
        <li>error</li>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
 <div class="col-xs-3">
    <%= render 'layouts/sidebar', user: current_user, book: @book %>
  </div>
 <div class="col-xs-9">


  <h1>Books</h1>
  <table  class="table table-striped">
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
    <tr>
      <td><a href="<%= user_path(book.user) %>"><%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></a></td>
      <td><%=link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>

    </tr>
    <% end %>
  </tbody>
  </table>
  </div>
</div>
 </div>

</div>